#!/bin/ksh

cd $(dirname $0)
SCRIPT_PATH=$(pwd)

vm_name="$1"
vm_ip="$(cloudy get machine ip "$vm_name")"

VBoxManage startvm --type headless "$vm_name"

while [ 1 ]
do
    echo -n "."
    $SCRIPT_PATH/ssh-pass ssh "root@$vm_ip" "id ; pkill -9 dhclient" | grep root >/dev/null && break
    sleep 1
done

